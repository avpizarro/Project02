{{> managerHeader}}
<article class="managerArticle">
  {{> managerNav }}
  <div class="container containerWaiter containerManager">
    <div class="row waiterRow managerRow">
      <div class="col-12 empForm">
        <form id="addEmployee">
          <h3 class="mt-3">Add New Dish</h3>
          <div class="form-group row">
            <!-- Dish Name -->
            <div class="col-sm-12">
              <input type="text" class="form-control" id="title" name="title" placeholder="Dish Name">
            </div>
          </div>

          <div class="form-group row">
            <!-- Price -->
            <div class="col-sm-12">
              <input type="number" class="form-control" placeholder="Price" step="0.01" min="0" id="price">
            </div>
          </div>
          <button type="submit" id="addDishBtn" class="btn btn-primary submitBtn">Submit</button>
        </form>
      </div>
    </div>
  </div>
</article>
{{> managerFooter }}