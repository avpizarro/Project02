{{> managerHeader}}
<article class="managerArticle">
  {{> managerNav }}
  <div class="container containerWaiter containerManager">
    <div class="row waiterRow managerRow">

      <div class="col-12 empForm addIng">
        <form id="addEmployee">
          <h3 class="mt-3">Add New Ingredient</h3>
          <div class="form-group row">
            <!-- Ingredient Name -->
            <div class="col-sm-12">
              <input type="text" class="form-control" id="name" name="name" placeholder="Ingredient Name">
            </div>
          </div>
          <div class="form-group row">
            <!-- Quantity -->
            <div class="col-sm-12">
              <input type="number" class="form-control" id="quantity" placeholder="Quantity in Stock">
            </div>
          </div>
          <div class="form-group row">
            <!-- minimumQuantity-->
            <div class="col-sm-12">
              <input type="number" class="form-control" id="minimumQuantity" placeholder="Minimum Quantity">
            </div>
          </div>
          <button type="submit" id="addIngredientBtn" class="btn btn-primary submitBtn">Submit</button>
        </form>
      </div>

      <div class="col-12 empForm addIcon" style="display: none">
        <form id="addEmployee">
          <h3 class="mt-3">Pick An Ingredient Icon</h3>
          <div class="form-group row">
            <!-- Ingredient Name -->
            <div class="col-sm-12">
                <div style="float:left"><img class="iconToChoose"><input type="radio" class="pickIcon" name="icon" id="ic1">
                </div>
                <div style="float:left"><img class="iconToChoose"><input type="radio" class="pickIcon" name="icon" id="ic2">
                </div>
                <div style="float:left"><img class="iconToChoose"><input type="radio" class="pickIcon" name="icon" id="ic3">
                </div>
                <div style="float:left"><img class="iconToChoose"><input type="radio" class="pickIcon" name="icon" id="ic4">
                </div>
                <div style="float:left"><img class="iconToChoose"><input type="radio" class="pickIcon" name="icon" id="ic5">
              </div>
            </div>
          </div>
          <button type="submit" id="addIconBtn" class="btn btn-primary submitBtn">Submit</button>
        </form>
      </div>

    </div>
  </div>
</article>
{{> managerFooter }}