{{> managerHeader}}
<article class="managerArticle">
  {{> managerNav }}
  <div class="container containerWaiter containerManager">
    <div class="row waiterRow managerRow">
      <div class="col-12 empForm">
        <form id="addEmployee">
          <h3 class="mt-3">Add New Ingredient</h3>
          <div class="form-group row">
            <!-- Ingredient Name -->
            <div class="col-sm-12">
              <input type="text" class="form-control" id="name" name="name" placeholder="Ingredient Name">
            </div>
          </div>

          <div class="form-group row">
            <!-- Quantity -->
            <div class="col-sm-12">
              <input type="number" class="form-control" id="quantity" placeholder="Quantity in Stock">
            </div>
          </div>
          <div class="form-group row">
            <!-- minimumQuantity-->
              <div class="col-sm-12">
              <input type="number" class="form-control" id="minimumQuantity" placeholder="Minimum Quantity">
            </div>
          </div>
          <button type="submit" id="addIngredientBtn" class="btn btn-primary submitBtn">Submit</button>
        </form>
      </div>
    </div>
  </div>
</article>
{{> managerFooter }}