{{> managerHeader}}
<article class="managerArticle">
    <!-- Sidebar -->
    {{> managerNav }}
    <div class="container containerWaiter containerManager">
        <div class="row waiterRow managerRow">
            <div class="col-12 managerContentColumn">
                <table class="table empTable empForm">
                    <thead class="thead-dark">
                        <tr>
                            <th>id</th>
                            <th>Ingredient Name</th>
                            <th>Quantity</th>
                            <th>Minimum Quantity</th>
                            <th></th>
                        </tr>
                    </thead>
                    <tbody>
                        {{#each ing}}
                        <tr>
                            <td>{{id}}</td>
                            <td>{{name}}</td>
                            <td>{{quantity}}</td>
                            <td>{{minimumQuantity}}</td>
                            <td class="deleteBtn"><button class="btn btn-danger btn-sm  deleteIngredient submitBtn"
                                    type="submit" title="Delete" data-id={{id}}><i class="fa fa-trash"></i></button>
                            </td>
                        </tr>
                        {{/each}}
                    </tbody>
                </table>
            </div>
        </div>
    </div>
</article>

{{> managerFooter }}