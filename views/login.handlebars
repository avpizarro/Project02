{{> mainHeader}}
<article class="login">
    <div class="container containerLogin">
        <div class="pinBox">
            <div class="pincodeCenter">
                <div class="pincode-input-container">
                    <input type="text" pattern="[0-9] " maxlength="1" autocomplete="off" placeholder="•"
                        class="form-control pincode-input-text pincode-input-text-masked" id="first">
                    <input type="text" maxlength="1" autocomplete="off" placeholder="•"
                        class="form-control pincode-input-text pincode-input-text-masked" id="mid1">
                    <input type="text" maxlength="1" autocomplete="off" placeholder="•"
                        class="form-control pincode-input-text pincode-input-text-masked" id="mid2">
                    <input type="text" maxlength="1" autocomplete="off" placeholder="•"
                        class="form-control pincode-input-text pincode-input-text-masked" id="last">
                </div>
                <button class="btn btn-primary submitBtn" id="pinSubmit" type="submit">Submit</button>
            </div>
            <div id="signUpForm" style="display: none">
                <form>
                    <h3 class="mt-3">Manager Sign Up</h3>
                    <div class="form-group row">
                        <!-- First Name -->
                        <div class="col-sm-12">
                            <input type="text" class="form-control" id="firstName" name="firstName"
                                placeholder="First Name">
                        </div>
                    </div>

                    <div class="form-group row">
                        <!-- Last Name -->
                        <div class="col-sm-12">
                            <input type="text" class="form-control" id="lastName" name="lastName"
                                placeholder="Last Name">
                        </div>
                    </div>

                    <div class="form-group row">
                        <!-- Email-->
                        <div class="col-sm-12">
                            <input type="email" class="form-control" id="email" name="email" placeholder="Email">
                        </div>
                    </div>

                    <div class="form-group row">
                        <!-- Phone Number-->
                        <div class="col-sm-12">
                            <input type="tel" class="form-control" id="phone" name="phone" placeholder="Phone Number">
                        </div>
                    </div>
                    <div class="form-group row">
                        <!-- Pin Number -->
                        <div class="col-sm-12">
                            <input type="number" class="form-control" id="pinNumber" name="pinNumber"
                                placeholder="Pin Number">
                        </div>
                    </div>

                    <button type="submit" id="addEmpBtn" class="btn btn-primary submitBtn newManagerBtn">Submit</button>
                </form>
            </div>
        </div>
    </div>
</article>

<script type="text/javascript" src="/assets/js/login.js"></script>