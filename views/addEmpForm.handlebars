<!-- This handlebars is used to add new employee Form in Manager page -->
{{>managerHeader}}
<article class="managerArticle">
    {{> managerNav }}
    <div class="container containerWaiter containerManager">
        <div class="row waiterRow managerRow">
                <div class="col-12 empForm">
                    <form id="addEmployee">
                        <h3 class="mt-3">Add New Employee</h3>
                        <div class="form-group row">
                            <!-- First Name -->
                            <div class="col-sm-12">
                                <input type="text" class="form-control" id="firstName" name="firstName" placeholder="First Name">
                            </div>
                        </div>

                        <div class="form-group row">
                            <!-- Last Name -->
                            <div class="col-sm-12">
                                <input type="text" class="form-control" id="lastName" name="lastName" placeholder="Last Name">
                            </div>
                        </div>

                        <div class="form-group row">
                            <!-- Email-->
                            <div class="col-sm-12">
                                <input type="email" class="form-control" id="email" name="email" placeholder="Email">
                            </div>
                        </div>

                        <div class="form-group row">
                            <!-- Phone Number-->
                            <div class="col-sm-12">
                                <input type="tel" class="form-control" id="phone" name="phone" placeholder="Phone Number">
                            </div>
                        </div>
                        <div class="form-group row">
                            <!-- Pin Number -->
                            <div class="col-sm-12">
                                <input type="number" class="form-control" id="pinNumber" name="pinNumber" placeholder="Pin Number">
                            </div>
                        </div>

                        <div class="form-group row">
                            <!-- Position -->
                            <div class="col-sm-12">
                                <select id="position" class="form-control">
                                    <option selected>Choose Position...</option>
                                    <option>waiter</option>
                                    <option>chef</option>
                                    <option>manager</option>
                                </select>
                            </div>
                        </div>

                        <div class="form-group row">
                            <!-- Manager Id -->
                            <div class="col-sm-12">
                                <input type="text" class="form-control" id="managerId" name="managerId"
                                    placeholder="Manager Id (0 if no manager)">
                            </div>
                        </div>
                        <button type="submit" id="addEmpBtn" class="btn btn-primary submitBtn">Submit</button>
                    </form>
                </div>
            </div>
    </div>
</article>

{{> managerFooter }}